    <!-- For Background Animation -->
        <header>
            <img src="/Images/quiz world white.png" alt="" class="center">
        <div class="head">
            <h2>Attempt All Question</h2>
            <h5>In the end don't forget to press submit button</h5>
        </div>
        <form method="POST" action="/submit">
            <%var i=0%>
            <%read.forEach(function(row){ %>
            <%i++%>
        <section class="container">
            <h4><%="Question :"+i%></h4>
            <p><%=row.question%></p>
            <input type="radio" name=<%="option"+i%> value="<%=row.option1%>">
            <label for=<%=row.option1%>><%=row.option1%></label><br>
            <input type="radio" name=<%="option"+i%> value="<%=row.option2%>">
            <label for=<%=row.option2%>><%=row.option2%></label><br>
            <input type="radio" name=<%="option"+i%> value="<%=row.option3%>">
            <label for=<%=row.option3%>><%=row.option3%></label><br>
            <input type="radio" name=<%="option"+i%> value="<%=row.option4%>">
            <label for=<%=row.option4%>><%=row.option4%></label>
        </section>
        <% }) %>
            <button name="send" type="submit" class="submit">Submit</button>
        </form> 
</header>

